@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}




<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Experiences</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Update Experience Page</div>
					</div>
					<div class="card-body">

						<form asp-action="UpdateExperience" method="post">
							<input type="hidden" asp-for="ExperienceId" class="form-control" />
							<label>Head</label>
							<input type="text" asp-for="Head" class="form-control" />
							<br />
							<label>Title </label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Date</label>
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							<label>Description</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-primary"> Save </button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
